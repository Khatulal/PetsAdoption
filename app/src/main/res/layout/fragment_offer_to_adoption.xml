<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OfferToAdoptionFragment">

    <TextView
        android:id="@+id/tvYourPets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/your_pets"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/rvOfferToAdoptionList"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvOfferToAdoptionList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toTopOf="@+id/btnOfferPet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvYourPets" />

    <Button
        android:id="@+id/btnOfferPet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginStart="6dp"
        android:padding="14dip"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rvOfferToAdoptionList"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/offer_a_pet_for_adoption" />

    <Button
        android:id="@+id/btnBackOfferToAdoption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="132dp"
        android:layout_marginTop="36dp"
        android:padding="14dip"
        android:text="@string/button_text_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnOfferPet"
        app:layout_constraintTop_toBottomOf="@+id/rvOfferToAdoptionList"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>
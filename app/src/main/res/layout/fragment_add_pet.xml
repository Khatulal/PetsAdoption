<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddPetFragment">

    <ImageView
        android:id="@+id/ivPetImageAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvPetNameAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginStart="6dp"
        android:text="@string/pet_name"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivPetImageAdd" />

    <EditText
        android:id="@+id/etPetNameContentAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginStart="6dp"
        android:inputType="text"
        android:text="@string/name"
        android:ems="10"
        android:maxLines = "1"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/tvPetNameAdd"
        app:layout_constraintTop_toBottomOf="@+id/ivPetImageAdd" />

    <TextView
        android:id="@+id/tvSpecieAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginStart="6dp"
        android:text="@string/specie"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etPetNameContentAdd" />

    <Spinner
        android:id="@+id/spSpecieContentAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="24dp"
        android:contentDescription="@string/Specie"
        android:entries="specieSelectionList"
        android:minWidth="100dp"
        android:minHeight="48dp"
        android:prompt="Specie"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/tvSpecieAdd"
        app:layout_constraintTop_toBottomOf="@+id/etPetNameContentAdd" />

    <TextView
        android:id="@+id/tvBreedAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginStart="6dp"
        android:text="@string/breed"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spSpecieContentAdd" />

    <EditText
        android:id="@+id/etBreedContentAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginStart="6dp"
        android:text="@string/Breed"
        android:inputType="text"
        android:ems="10"
        android:maxLines = "1"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/tvBreedAdd"
        app:layout_constraintTop_toBottomOf="@+id/spSpecieContentAdd" />

    <TextView
        android:id="@+id/tvSexAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginStart="6dp"
        android:text="@string/sex"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etBreedContentAdd" />

    <Spinner
        android:id="@+id/spSexContentAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="24dp"
        android:contentDescription="@string/Sex"
        android:entries="sexSelectionList"
        android:minHeight="48dp"
        android:minWidth="100dp"
        android:prompt="Sex"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/tvSexAdd"
        app:layout_constraintTop_toBottomOf="@+id/etBreedContentAdd" />

    <TextView
        android:id="@+id/tvAgeAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        android:text="@string/age"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/spSexContentAdd"
        app:layout_constraintTop_toBottomOf="@+id/etBreedContentAdd" />

    <EditText
        android:id="@+id/etAgeContentAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginStart="6dp"
        android:text="@string/Age"
        android:ems="5"
        android:maxLines = "1"
        android:inputType="numberDecimal"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/tvAgeAdd"
        app:layout_constraintTop_toBottomOf="@+id/etBreedContentAdd" />

    <TextView
        android:id="@+id/tvWeightAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginStart="6dp"
        android:text="@string/weight"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etAgeContentAdd" />

    <EditText
        android:id="@+id/etWeightContentAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginStart="6dp"
        android:text="@string/kg"
        android:ems="3"
        android:maxLines = "1"
        android:inputType="numberDecimal"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/tvWeightAdd"
        app:layout_constraintTop_toBottomOf="@+id/etAgeContentAdd" />

    <CheckBox
        android:id="@+id/cbVaccinatedAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginStart="68dp"
        android:button="@null"
        android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
        android:text="@string/vaccinated"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/etWeightContentAdd"
        app:layout_constraintTop_toBottomOf="@+id/etAgeContentAdd" />


    <TextView
        android:id="@+id/tvDietAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginStart="6dp"
        android:text="@string/diet"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etWeightContentAdd" />

    <Spinner
        android:id="@+id/spDietContentAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="24dp"
        android:contentDescription="@string/Diet"
        android:entries="dietSelectionList"
        android:minHeight="48dp"
        android:minWidth="100dp"
        android:prompt="Diet"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/tvDietAdd"
        app:layout_constraintTop_toBottomOf="@+id/etWeightContentAdd" />

    <TextView
        android:id="@+id/tvDescriptionAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginStart="6dp"
        android:text="@string/description"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spDietContentAdd" />

    <EditText
        android:id="@+id/etDescriptionContentAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginStart="6dp"
        android:inputType="text"
        android:text="@string/Description"
        android:ems="10"
        android:maxLines = "3"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/tvDescriptionAdd"
        app:layout_constraintTop_toBottomOf="@+id/spDietContentAdd" />

    <Button
        android:id="@+id/btnAddPet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginStart="6dp"
        android:padding="14dip"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etDescriptionContentAdd"
        android:text="@string/add_pet" />

    <Button
        android:id="@+id/btnBackAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginStart="36dp"
        android:padding="14dip"
        app:layout_constraintStart_toEndOf="@+id/btnAddPet"
        app:layout_constraintTop_toBottomOf="@+id/etDescriptionContentAdd"
        android:text="@string/back"/>


</androidx.constraintlayout.widget.ConstraintLayout>